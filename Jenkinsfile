pipeline {
 
  agent any
  
  stages {
   
    stage("checkout") {
     
      steps {
        echo 'checkout the application...';
      }
      
    }
   
    stage("build") {
     
      steps {
        echo 'build the application...';
      }
      
    }
   
    stage("test") {
     
      steps {
        echo 'test the application...';
      }
      
    }
   
    stage("deploy") {
     
      steps {
        echo 'deploy the application...';
      }
      
    }
   
    stage("cleanup") {
     
      steps {
        echo 'cleanup the application...';
      }
      
    }
    
  }
  
}
